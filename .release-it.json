{
  "git": {
    "requireBranch": "main",
    "commitMessage": "chore: release v${version}"
  },
  "hooks": {
    "before:init": ["git pull", "npm run type-check", "npm run lint", "npm run test"],
    "after:bump": "npx auto-changelog --stdout --commit-limit false --unreleased --template keepachangelog --package"
  },
  "github": {
    "release": true
  },
  "npm": {
    "publish": true
  }
}
